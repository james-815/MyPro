@model DataLayer.ViewModels.NeedinesViewModel

@{
    /**/

    ViewBag.Title = "افزودن نیازمند";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style
{
    <link href="~/Content/persian.datepicker.css" rel="stylesheet" />
}

<div class="card mt-2">
    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane show active">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>افزودن نیازمند جدید</h4>
                        <div class="alert alert-primary bg-white text-primary" role="alert">
                            <i class="mdi mdi-alert-outline mdi-24px"></i> لطفا توجه نمایید که فرمت تصویر ارسالی <strong>.JPG</strong> باشد.
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Sex, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
                                    <div class="col-md-10">
                                        @*@Html.EditorFor(model => model.Sex, new { htmlAttributes = new { @class = "form-control" } })*@
                                        @Html.DropDownListFor(model => model.Sex, new List<SelectListItem>() { new SelectListItem() { Text = "مذکر", Value = "1" }, new SelectListItem() { Text = "مونث", Value = "2" } }, "انتخاب کنید", htmlAttributes: new { @class = "form-select" })
                                        @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Job, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Job, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Job, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.BirthDate, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
                                    <div class="col-md-10">
                                        <input id="BirthDate" name="BirthDate" type="text" class="form-control">
                                        @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Pic, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Pic, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Pic, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Income, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Income, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Income, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Education, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
                                    <div class="col-md-10">
                                        @*@Html.EditorFor(model => model.Education, new { htmlAttributes = new { @class = "form-control" } })*@
                                        @Html.DropDownListFor(model => model.Education, new List<SelectListItem>() { new SelectListItem() { Text = "بیسواد", Value = "1" }, new SelectListItem() { Text = "ابتدایی", Value = "2" }, new SelectListItem() { Text = "سیکل", Value = "3" }, new SelectListItem() { Text = "دیپلم", Value = "4" }, new SelectListItem() { Text = "فوق دیپلم", Value = "5" }, new SelectListItem() { Text = "لیسانس", Value = "6" }, new SelectListItem() { Text = "فوق لیسانس", Value = "7" }, new SelectListItem() { Text = "دکتری", Value = "8" } }, "انتخاب کنید", htmlAttributes: new { @class = "form-select" })
                                        @Html.ValidationMessageFor(model => model.Education, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-12 mt-3">
                            <input type="submit" value="ثبت اطلاعات" class="btn btn-success" />
                            @Html.ActionLink("بازگشت", "Index", null, htmlAttributes: new { @class = "btn btn-warning" })
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@section Script
{
    <script src="~/Scripts/persian-date.min.js"></script>
    <script src="~/Scripts/persian-datepicker.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#BirthDate").pDatepicker({
                initialValue: false,
                format: 'YYYY/MM/DD'
            });
        });
    </script>
}